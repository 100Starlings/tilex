<nav class="pagination">
  <%= if @page > 1 do %>
    <a rel="previous" class="pagination_newer" href="/?page=<%= @page - 1 %>">newer TILs</a>
  <% end %>

  <%= if Enum.count(@posts) > 50 do %>
    <a rel="next" class="pagination_older" href="/?page=<%= @page + 1 %>">older TILs</a>
  <% end %>
</nav>
